<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProgrammerCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/brand</item>
        <item name="colorSecondaryVariant">@color/brand</item>
        <item name="colorOnSecondary">@color/brand</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="button.buttonPrimary">
        <item name="backgroundTint">@color/brand</item>
    </style>

    <style name="button.buttonSecondary">
        <item name="backgroundTint">@color/secondary</item>
    </style>

</resources>